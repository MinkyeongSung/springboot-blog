{{> /layout/header}}

<div class="container p-5">

    <div class="card">
        <div class="card-header"><b>로그인을 해주세요</b></div>
        <!--요청을 하면 localhost:8080/login 이 POST로 요첨됨
    username=사용자입력값&password=사용자값-->
        <form action="/login" method="post" enctype="application/x-www-form-urlencoded">
            <div class="card-body">
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Enter username" name="email">
                </div>
                <div class="mb-3">
                    <input type="password" class="form-control" placeholder="Enter password" name="pswd">
                </div>
                <button type="submit" class="btn btn-primary mb-3">로그인</button>
        </form>
    </div>
</div>
</div>

{{> /layout/footer}}